<Window x:Class="MHLootTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MHLootTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="#FF666666">
    <StackPanel Name="Container" Orientation="Vertical" HorizontalAlignment="Center">
        <StackPanel Name="cmbBoxPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <ComboBox x:Name="heroBox" Margin="5"/>
            <ComboBox x:Name="villainBox" Margin="5" SelectionChanged="villainBox_SelectionChanged"/>
        </StackPanel>
        <StackPanel Name="lootPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            
        </StackPanel>
        <StackPanel Name="RIFPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <TextBlock Name="RIFLabel" Text="% RIF:" Margin="5"></TextBlock>
            <TextBox Name="RIFBox" Width="35" Margin="5"></TextBox>
            <DatePicker Name="datePicker" Margin="5"/>
        </StackPanel>
        
    </StackPanel>
</Window>

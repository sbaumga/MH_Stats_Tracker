<UserControl x:Class="MHLootTracker.GUITimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MHLootTracker"
             mc:Ignorable="d" d:DesignWidth="300" Height="104.795">
    <StackPanel Name="Container" Orientation="Vertical" Margin="5" Background="DarkSlateGray">
        <TextBlock Name="TimeLbl" Text="0:00:00" FontSize="20" HorizontalAlignment="Center"></TextBlock>
        <StackPanel Name="ButtonsPnl" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button Name="StartBtn" Content="Start" IsEnabled="True" Height="50" Width="70" Click="StartBtn_Click"/>
            <Button Name="ResetBtn" Content="Reset" IsEnabled="False" Height="50" Width="70" Click="ResetBtn_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
